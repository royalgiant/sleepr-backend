<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="row justify-content-center">
    <h2 class="text-5xl text-center mt-5">Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="my-3">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="my-3">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <label class="justify-content-center justify-centespace-x-2 my-2">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <span class="text-lg">Remember me</span>
        </label>
      <% end %>

      <div class="my-3">
        <%= f.submit "Log in", class: "w-full p-3 text-white bg-blue-600 rounded hover:bg-blue-700" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
