<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="row justify-content-center">
    <h2 class="text-5xl text-center mt-5">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbolinks: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="my-3">
        <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, autocomplete: "first_name", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="my-3">
        <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true, autocomplete: "last_name", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="my-3">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="my-3">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="my-3">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password",  class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="my-3">
        <div class="cf-turnstile" data-sitekey="<%= Rails.application.credentials.dig(Rails.env.to_sym, :cloudflare, :captcha, :site_key) %>"></div>
      </div>

      <div class="my-3">
        <%= f.submit "Sign up", class: "w-full p-3 text-white bg-blue-600 rounded hover:bg-blue-700" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>