  </div>
</section>

<div class="relative mx-auto px-4 sm:px-6 lg:px-8">
  <section id="faq" aria-labelledby="faq-title" className="relative overflow-hidden bg-gray-50 py-20 sm:py-32">
      <div class="container mx-auto lg:max-w-7xl">
        <div class="py-32">
          <h2 id="faq-title" class="font-display text-3xl tracking-tight text-white sm:text-5xl"
          >
            Frequently asked questions
          </h2>
          <p class="mt-4 text-xl font-light tracking-tight text-gray-700">
            If you can't find what you're looking for, email our support team
            and someone will get back to you.
          </p>

          <dl class=" container mt-10 space-y-6 divide-y divide-gray-900/10">
            <% @faqs.each_with_index do |faq, index| %>
              <div class="pt-6">
                <dt>
                  <button type="button" class="flex w-full items-start justify-between text-left text-white" aria-controls="faq-<%= index %>" aria-expanded="false">
                    <span class="text-base font-semibold leading-7"><%= faq[:question] %></span>
                    <span class="ml-6 flex h-7 items-center">
                      <svg class="h-6 w-6 plus-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
                      </svg>
                      <svg class="hidden h-6 w-6 minus-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                      </svg>
                    </span>
                  </button>
                </dt>
                <dd class="mt-2 pr-12 hidden" id="faq-<%= index %>">
                  <p class="text-base leading-7 text-gray-600"><%= faq[:answer] %></p>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
  </section>

  <footer class="bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-16">
        <nav class="mt-10 text-md" aria-label="quick links">
          <div class="-my-1 flex justify-center gap-x-6">
            <%= link_to "Features", "#features", class: "text-gray-700 hover:text-white" %>
            <%= link_to "FAQ", "#faq", class: "text-gray-700 hover:text-white" %>
            <%= link_to "Terms & Conditions", terms_path, class: "text-gray-700 hover:text-white" %>
            <%= link_to "Privacy Policy", privacy_path, class: "text-gray-700 hover:text-white" %>
          </div>
        </nav>
      </div>
      <div class="flex flex-col items-center border-t border-gray-400/10 py-10 sm:flex-row-reverse sm:justify-between">
        <div class="flex gap-x-6">
          <%= link_to "https://x.com/donaldklee", class: "group", aria_label: "BuzzwallHQ on X", target: "_blank", rel: "noopener noreferrer" do %>
            <svg
              class="h-6 w-6 fill-gray-500 group-hover:fill-gray-700"
              aria-hidden="true"
              viewBox="0 0 24 24"
            >
              <path d="M13.3174 10.7749L19.1457 4H17.7646L12.7039 9.88256L8.66193 4H4L10.1122 12.8955L4 20H5.38119L10.7254 13.7878L14.994 20H19.656L13.3171 10.7749H13.3174ZM11.4257 12.9738L10.8064 12.0881L5.87886 5.03974H8.00029L11.9769 10.728L12.5962 11.6137L17.7652 19.0075H15.6438L11.4257 12.9742V12.9738Z" />
            </svg>
          <% end %>
        </div>
        <p class="mt-6 text-sm text-gray-500 sm:mt-0">
          Copyright &copy; <%= Time.current.year %> BuzzwallHQ. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</div>

<script>
  $(document).ready(function() {
    $('dl button').on('click', function() {
      var $button = $(this);
      var $dd = $button.closest('dt').next('dd');
      var isExpanded = $button.attr('aria-expanded') === 'true';

      // Toggle the visibility of the answer
      $dd.toggleClass('hidden');

      // Toggle the aria-expanded attribute
      $button.attr('aria-expanded', !isExpanded);

      // Toggle the plus/minus icons
      $button.find('.plus-icon, .minus-icon').toggleClass('hidden');
    });
  });
</script>